<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FoodPlanner" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
    </style>

    <style name="Theme.splashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_light_mode</item>
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodPlanner</item>
    </style>

</resources>