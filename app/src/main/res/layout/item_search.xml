<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_90"
    app:cardCornerRadius="@dimen/radius_12"
    android:layout_marginVertical="@dimen/margin_6"
    android:backgroundTint="?attr/backgroundColor"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_search_item"
        android:layout_width="@dimen/width_158"
        android:layout_height="@dimen/height_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"

        />

    <TextView
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:ellipsize="end"
        android:letterSpacing="0.01"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_search_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Egyptian Fatteh " />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>