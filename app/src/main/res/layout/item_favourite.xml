<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="@dimen/radius_12"
    android:layout_marginVertical="@dimen/margin_6"
    android:backgroundTint="?attr/backgroundColor"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_f"
            android:layout_width="@dimen/width_158"
            android:layout_height="@dimen/height_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/name_f"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_f"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Egyptian Fatteh " />

        <TextView
            android:id="@+id/category_f"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/name_f"
            android:layout_marginTop="@dimen/margin_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_f"
            tools:text="Egyptian Fatteh " />
        <ImageView
            android:id="@+id/make_unFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite_done"
            android:layout_marginEnd="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_f"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>