<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_208"
    app:cardCornerRadius="@dimen/radius_8"
    android:layout_margin="@dimen/margin_4"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_show_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_208"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />
        <TextView
            android:id="@+id/title_item_show_all"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:background="@color/back_text"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_item_show_all"
            app:layout_constraintStart_toStartOf="@+id/image_item_show_all"
            android:drawableStart="@drawable/knife"
            android:drawablePadding="@dimen/margin_4"
            android:paddingStart="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12"

            tools:text="Masala karel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>