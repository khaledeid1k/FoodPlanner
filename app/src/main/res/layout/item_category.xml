<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_view_card_image"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_170"
    android:layout_marginVertical="@dimen/margin_4"
    android:layout_marginHorizontal="@dimen/margin_16"
    app:cardCornerRadius="@dimen/radius_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_img_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:foreground="@drawable/foreground_card_category"
            android:scaleType="centerCrop"
            tools:src="@drawable/cook"/>

        <TextView
            android:id="@+id/text_value_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintBottom_toBottomOf="@id/card_category"
            app:layout_constraintEnd_toEndOf="@id/card_category"
            app:layout_constraintStart_toStartOf="@id/card_category"
            app:layout_constraintTop_toTopOf="@id/card_category"
            tools:text="name of category" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
